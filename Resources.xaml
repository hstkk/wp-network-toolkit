<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit">

    <Style TargetType="Button">
        <Setter Property="toolkit:TiltEffect.IsTiltEnabled" Value="True"/>
    </Style>

    <Style TargetType="RadioButton">
        <Setter Property="toolkit:TiltEffect.IsTiltEnabled" Value="True"/>
    </Style>

    <Style TargetType="toolkit:ToggleSwitch">
        <Setter Property="toolkit:TiltEffect.IsTiltEnabled" Value="True"/>
    </Style>

    <Style TargetType="toolkit:ListPicker">
        <Setter Property="toolkit:TiltEffect.IsTiltEnabled" Value="True"/>
    </Style>

    <Style TargetType="TextBlock"
           x:Key="PhoneTextSmallStyleForeground"
           BasedOn="{StaticResource PhoneTextSmallStyle}">
        <Setter Property="Foreground" Value="{StaticResource PhoneForegroundColor}"/>
    </Style>

    <Style TargetType="TextBlock"
           BasedOn="{StaticResource PhoneTextNormalStyle}">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <ItemsPanelTemplate x:Key="wrap">
        <toolkit:WrapPanel/>
    </ItemsPanelTemplate>
</ResourceDictionary>